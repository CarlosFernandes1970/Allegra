@model Joia
<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img class="img-thumbnail img-fluid" src="~/images/@Model.ImgURL" style="height: 250px; width: 450px;" />
            </div>
            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text"><h5>@Model.DescricaoDetalhada</h5></p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Joia" asp-action="List"
                       class="btn btn-outline-info">Ver todos</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra"
                       asp-action="AdicionarItemNoCarrinhoCompra" asp-route-joiaId="@Model.JoiaId">
                        Adicionar
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
